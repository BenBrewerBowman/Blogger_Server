<div id="show" class="container centered ">
  <div class="clear_navbar"></div>
  <p id="notice"><%= notice %></p>

  <h1>Admins</h1>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <!-- <th>Password</th>
        <th>Password confirmation</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.username %></td>
          <td><%= author.email %></td>
          <!-- <td><%= author.password %></td>
          <td><%= author.password_confirmation %></td> -->
          <td><%= link_to 'Show', author %></td>
          <td><%= link_to 'Edit', edit_author_path(author) %></td>
          <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button><%= link_to 'New Admin', new_author_path, class: "black_link" %></button>
  <%= link_to "<< Back to Articles List", articles_path, class: "button button-primary"%>

</div>
