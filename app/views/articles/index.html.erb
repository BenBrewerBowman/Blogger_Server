<div class="cover_image">
  <div class = "image">
    <%= image_tag("certification-lamp.svg", :alt => "Blog Title Background", :class => "image") %>
  </div>
  <p>Developer Blog<span><br />Built on Rails</span></p>
  <div id="Creator">created by: Benjamin Brewer-Bowman</div>
</div>


<h1>All Articles</h1>

<% if logged_in? %>
  <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article),
      class: 'article_title', id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>
