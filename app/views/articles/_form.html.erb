<%= form_for(@article) do |f| %>

  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>

  <!-- article title -->
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <!-- article body  -->
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <!-- tags -->
  <p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
  </p>

  <!-- Image attachment -->
  <p>
    <% if @article.image.exists? %>
        <%= image_tag @article.image.url %><br/>
    <% end %>
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </p>

  <!-- submit button -->
  <p>
    <%= f.submit %>
  </p>

<% end %>
