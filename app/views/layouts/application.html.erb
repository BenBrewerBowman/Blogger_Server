<!DOCTYPE html>
<html>
  <head>
    <title>BloggerServer</title>
    <%= csrf_meta_tags %>
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins|Questrial|Raleway" rel="stylesheet">
    <!--  font-family: 'Raleway', sans-serif;
          font-family: 'Poppins', sans-serif;
          font-family: 'Varela Round', sans-serif; -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="flash" class="showBox">
      <%= flash.notice %>
    </p>

    <!-- navigation menu -->
    <div class="navbar">
      <div class="container">
        <div class="navbar-list">
          <!-- tags button -->
          <div class="navbar-item"> <%= link_to "Tags", tags_path, class: "black_link" %></div>
          <!-- login button -->
          <div class="navbar-item">
            <% if logged_in? %>
              <span><%= "Logged in as #{current_user.username}" %></span>
              <%= link_to "(Logout)", logout_path, class: "black_link" %>
            <% else %>
              <%= link_to "(Login)", login_path, class: "black_link" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div id="content">
      <%= yield %>
    </div>

  </body>
</html>
