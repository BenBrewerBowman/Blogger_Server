<h1>Articles Tagged with <%= @tag.name.titleize %></h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<% end %>
<br/>
<br/>
  <%= link_to "Delete '#{@tag.name}' tag", tag_path(@tag), method: :delete , data: {confirm: "Do you really want to delete this tag?"} %><br/>
<br/>

  <%= link_to 'Back to Tags', tags_path, :class => "button" %>
</ul>
